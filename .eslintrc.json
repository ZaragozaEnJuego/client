{
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": [
      2,
      {
        "allowString": false,
        "allowNumber": false
      }
    ]
  },
  "ignorePatterns": [
    "__tests__/**/*.ts",
    "build/*",
    "coverage/",
    "jest.config.js",
    "app.ts",
    "server.ts",
    ".env",
    "vite.config.ts",
    "tailwind.config.cjs"
  ]
}
